<% include partials/header %>
<div>
<form id= "newAlbum">
  <label for ="Album Name">Album Name</label>
  <input type ="text" name="albumname" placeholder="Album Name">
  <label for ="Artist Name">Artist Name</label>
  <input type ="text" name="artistname" placeholder="Artist Name">
  <label for ="Release Date">Release Date</label>
  <input type ="text" name="releasedate" placeholder="Release Date">
  <label for ="Genres">Genres</label>
  <input type ="text" name="genres" placeholder="Genres">
</div>
<button type="submit" class="btn btn-primary">Add Album</button>
<!-- albums! -->
<div id='albums'>
  <% albums.forEach(function(album) { %>

    <!-- one album -->
    <div class="row album">

      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
          <div class="panel-body">


          <!-- begin album internal row -->
            <div class='row'>
              <div class="col-md-3 col-xs-12 thumbnail album-art">
                <img src="http://placehold.it/800x800" alt="album image">
              </div>

              <div class="col-md-9 col-xs-12">
                <ul class="list-group">
                  <li class="list-group-item">
                    <h4 class='inline-header'>Album Name:</h4>
                    <span class='album-name'><%= album.name %></span>
                  </li>

                  <li class="list-group-item">
                    <h4 class='inline-header'>Artist Name:</h4>
                    <span class='artist-name'><%= album.artistName %></span>
                  </li>

                  <li class="list-group-item">
                    <h4 class='inline-header'>Released date:</h4>
                    <span class='album-releaseDate'><%= album.releaseDate %></span>
                  </li>
                </ul>
              </div>

            </div>
            <!-- end of album internal row -->

            <div class='panel-footer'>
            </div>

          </div>
        </div>
      </div>
    </div>
    <!-- end one album -->

  <% }); %>
</div>

<% include partials/footer %>
